@model Ecommerce.Web.Models.LoginViewModel



@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Vale Mobi - Controle de Transação  | Login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <script>
        $(function() {
            $('#myModal').modal('true');
        });
        function OnSuccess() {
            window.location.href = 'Home/Index';
        }
    </script>

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">Vale Mobi</h1>

            </div>
            <h3>Bem vindo -  Controle de Transação </h3>

            <p>Login in. To see it in action.</p>
@using (Ajax.BeginForm("Login", "Logins", new AjaxOptions
{
    OnSuccess = "OnSuccess"
}))
{

                <div class="form-group">
                    @Html.TextBoxFor(a=>a.Usuario,new {@class="form-control",@placeholder="Username",@required=""})


                </div>
                    <div class="form-group">
                        @Html.TextBoxFor(a => a.Password, new {@type="password", @class = "form-control", @placeholder = "Password", @required = "" })
                    </div>
                    <button type="submit" class="btn btn-primary block full-width m-b">Login</button>

            }
            <p class="m-t"> <small>Vale Mobi - Sistema Controle de Transação &copy; @DateTime.UtcNow.Year</small> </p>
        </div>
    </div>
    
    
    
    
<div class="modal inmodal in" id="myModal" tabindex="-1" role="dialog" aria-hidden="true" >
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>

                <h4 class="modal-title">Vale Mobi - Controle de Transação  </h4>

            </div>
            <div class="modal-body">
                <p id="mensagem">

                </p>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


</body>

</html>


