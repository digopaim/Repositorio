@model IEnumerable<Ecommerce.Web.Models.LoginViewModel>

@{
    ViewBag.Title = "Index";
    ViewBag.Controller = "Login";
}

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>Login - Cadastro</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-wrench"></i>
            </a>

            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
<div class="ibox-content">
    <p class="pull-left">
        <a href="@Url.Action("Create", "Logins")" class="btn btn-primary">Create New</a>
    </p>
    <table class="table">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    <a href="@Url.Action("Delete", "Logins", new {id = item.Id})" class="btn btn-primary">Delete</a>
                    <a href="@Url.Action("Edit", "Logins", new {id = item.Id})" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Details", "Logins", new {id = item.Id})" class="btn btn-primary">Details</a>
                </td>
            </tr>
        }

    </table>
    </div>
    </div>
